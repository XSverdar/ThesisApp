<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@color/background">

    <Button
        android:id="@+id/return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:backgroundTint="@color/button"
        android:text="Return"
        android:textColor="@color/black" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:progress="60"
        android:progressTint="@color/done"
        android:backgroundTint="@color/progress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Devices Found"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Choose which watch you want to connect"
        android:textColor="@color/text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnWatch1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/device_button"
            android:drawableLeft="@drawable/android"
            android:drawablePadding="12dp"
            android:text="Google Pixel Watch 2"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnWatch2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/device_button"
            android:drawableLeft="@drawable/android"
            android:drawablePadding="12dp"
            android:text="Google Pixel Watch 1"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnWatch3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/device_button"
            android:drawableLeft="@drawable/apple"
            android:drawablePadding="12dp"
            android:text="iWatch"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>