<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/off_white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:progress="60"
        android:progressTint="@color/primary_teal"
        android:backgroundTint="@color/light_gray"
        android:layout_alignParentTop="true" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devices found"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#204A40"
        android:layout_marginTop="40dp"
        android:layout_gravity="center" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose which watch you want to connect"
        android:textSize="14sp"
        android:textColor="#2C7C6F"
        android:layout_marginTop="4dp"
        android:layout_gravity="center" />

    <!-- Device Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnWatch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Google Pixel Watch 2"
            android:drawableLeft="@drawable/android"
            android:drawablePadding="12dp"
            android:background="@drawable/selected_device_button"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnWatch2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Google Pixel Watch 1"
            android:drawableLeft="@drawable/android"
            android:drawablePadding="12dp"
            android:background="@drawable/unselected_device_button"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnWatch3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  iWatch"
            android:drawableLeft="@drawable/apple"
            android:drawablePadding="12dp"
            android:background="@drawable/unselected_device_button"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="‹ Previous"
            android:textColor="#AAB9C5"
            android:background="@drawable/button_previous_gray" />

        <Space
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Next ›"
            android:textColor="#000000"
            android:background="@drawable/button_teal" />
    </LinearLayout>
</LinearLayout>