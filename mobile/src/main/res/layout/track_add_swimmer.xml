<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TRACKING"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/addSwimmerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a Swimmer"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/inputSwimmerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Swimmer’s Name:"
        android:background="@drawable/border_button"
        android:padding="12dp"
        android:textColorHint="@color/sub"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/inputSwimmerAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Swimmer’s Age:"
        android:background="@drawable/border_button"
        android:padding="12dp"
        android:inputType="number"
        android:textColorHint="@color/sub"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/inputSwimmerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Swimmer’s Category:"
        android:background="@drawable/border_button"
        android:padding="12dp"
        android:textColorHint="@color/sub"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="300dp"
        android:layout_height="60sp"
        android:text="Next"
        android:backgroundTint="@color/button"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"
        android:drawableRight="@drawable/ic_next"
        android:layout_gravity="center"
        tools:ignore="RtlSymmetry" />

</LinearLayout>
