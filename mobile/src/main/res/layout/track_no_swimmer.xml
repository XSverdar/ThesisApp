<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TRACKING"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Connected to Google Pixel Watch 2"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_check"
        android:drawablePadding="12dp"
        android:background="@drawable/green_box"
        android:elevation="10dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Choose your Swimmer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/register"
        android:gravity="center" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_swim_on" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="You donâ€™t have any entries yet\nAdd your first one now"
        android:textStyle="bold"
        android:textColor="@color/register"
        android:gravity="center" />

    <Button
        android:id="@+id/btnAddSwimmer"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="+ Add a Swimmer"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:backgroundTint="@color/button" />

</LinearLayout>